{
  "manifest_version": 3,
  "name": "DevGrid",
  "version": "0.0.1",
  "description": "A grid overlay to assist web design",
  "action": {
    "default_icon": "hash.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

